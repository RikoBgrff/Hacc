@model List<UserRoleViewModel>

@{
    ViewData["Title"] = "UsersList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Admin</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">List Of Users</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Users</h6>
            </nav>
        </div>
    </nav>
    <div class="container-fluid py-4">
        <p>
            <a asp-action="Register" asp-area="Identity" asp-controller="Account">Create New</a>
        </p>
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6>Users List</h6>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">User Name</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Email</th>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Phone Number</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div>
                                                        <img src="https://upload.wikimedia.org/wikipedia/commons/9/99/Sample_User_Icon.png" class="avatar avatar-sm me-3">
                                                    </div>
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">@item.UserName</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@item.Email</p>
                                                @*<p class="text-xs font-weight-bold mb-0">Manager</p>
                                            <p class="text-xs text-secondary mb-0">Organization</p>*@
                                            </td>
                                            <td class="align-middle text-center text-sm">
                                                @*<span class="badge badge-sm bg-gradient-success">Online</span>*@
                                                <p class="text-xs font-weight-bold mb-0">@item.PhoneNumber</p>
                                            </td>
                                            <td class="align-middle">
                                                <a asp-action="UserEdit" asp-route-id="@item.UserId" class="text-secondary font-weight-bold text-xs">Edit | </a>
                                                <a asp-action="UserDelete" asp-route-id="@item.UserId" class="text-secondary font-weight-bold text-xs">Delete | </a>
                                                <a asp-action="UserDetails" asp-route-id="@item.UserId" class="text-secondary font-weight-bold text-xs">Details | </a>
                                                <a asp-action="AssignRoleToUser" asp-route-id="@item.UserId" class="text-secondary font-weight-bold text-xs">Assign Role to User |</a>
                                                <a asp-action="DeleteUserRole" asp-route-id="@item.UserId" class="text-secondary font-weight-bold text-xs">Delete Roles of User</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</main>